{
  "name": "use-reduced-motion",
  "version": "2.0.0",
  "description": "React hook to detect user reduce motion feature",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Antoine CARON <antoine.caron@bedrockstreaming.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Slashgear/use-reduce-motion"
  },
  "files": [
    "src/*",
    "dist/*"
  ],
  "keywords": [
    "react-hooks",
    "hooks",
    "react",
    "utils",
    "lib",
    "a11y",
    "accessibility"
  ],
  "devDependencies": {
    "@types/react": "^16.9.56",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "eslint": "^7.21.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "typescript": "^4.2.2"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "format": "prettier src/index.ts README.md -c",
    "lint": "yarn eslint . --ext .ts,.tsx",
    "build": "tsc --listEmittedFiles",
    "version": "yarn build",
    "postversion": "git push origin && git push --tags"
  }
}
